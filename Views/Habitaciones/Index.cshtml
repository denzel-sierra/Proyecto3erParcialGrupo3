@model IEnumerable<HotelManager.Models.Habitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarifa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoHabitacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarifa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Disponibilidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoHabitacion.IDTipoHabitacion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IDHabitacion">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IDHabitacion">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IDHabitacion">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
