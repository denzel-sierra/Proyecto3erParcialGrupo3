@model IEnumerable<HotelManager.Models.Habitacion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarifa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Disponibilidad)
            </th>
            <th>
                Tipo de Habitacion
            </th>
            <th>Acciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tarifa)
            </td>
                <td>
                    @if (item.Disponibilidad)
                    {
                        <span class="text-success">Disponible</span>
                    }
                    else
                    {
                        <span class="text-danger">No Disponible</span>
                    }
                </td>
            <td>
                    @Html.DisplayFor(modelItem => item.TipoHabitacion.Descripcion)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IDHabitacion" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IDHabitacion" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IDHabitacion" class="btn btn-danger">Delete</a>
                    @if (item.Disponibilidad)
                    {
                        <a asp-action="Reservar" asp-route-id="@item.IDHabitacion" class="btn btn-primary">Reservar</a>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>Reservar</button>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
